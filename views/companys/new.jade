
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Add Company
    // CSS
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/font.css')
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/form-elements.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/style.css')
  body
    // Top content
    .top-content
      .inner-bg
        .container
          .row
            .col-sm-8.col-sm-offset-2.text
              h1
                strong Add New Company
          .row
            .col-sm-3
              a.btn.btn-info(href='/admin/home', role='button') Go Back!
            .col-sm-6.form-box
              .form-top
                .form-top-left
                  h3 Add New Company
                  p Fill the form to add a new Company:
              .form-bottom
                form.login-form(role='form', action='create', method='post')
                  .form-group
                    label.sr-only(for='form-name') CompanyName
                    input#form-name.form-name.form-control(type='text', name='companyname', placeholder="Company_Name")
                  .form-group
                    label.sr-only(for='form-username') Company_id
                    input#form-username.form-username.form-control(type='text', name='companyid', placeholder="Company_ID")
                  button.btn(type='submit') Add
            .col-sm-3
              a.btn.btn-info(href='../admin/logout', role='button') Logout!
    // Javascript
    script(src='/stylesheets/assets/js/jquery-1.11.1.min.js')
    script(src='/stylesheets/assets/bootstrap/js/bootstrap.min.js')
    script(src='/stylesheets/assets/js/jquery.backstretch.min.js')
    script(src='/stylesheets/assets/js/scripts.js')
    //if lt IE 10
      script(src='assets/js/placeholder.js')

